
#managed nodegorup on demand
eksctl create nodegroup \
 --cluster=esempio-mio-cluster\
 --managed --name=esempio-cluster-nodes \
 --node-type t2.medium \
 --nodes 1 \
 --nodes-min 1 \
 --nodes-max 2

